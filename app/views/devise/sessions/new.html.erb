<div class="container">
  <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-signin">
	    <h2 class="form-signin-heading" style="text-align:center">
	      <span class="glyphicon glyphicon-record" style="font-size:30px;"></span> LOGIN CCTV
	    </h2>
	    <hr>
	    <% if notice %>
			  <div class="alert alert-block alert-danger fade in ">
			  	<button type="button" class="close" data-dismiss="alert">&times;</button>
			  	<%= notice %>
			  </div>
			<% end %>
			<% if alert %>
			  <div class="alert alert-block alert-danger fade in ">
			  	<button type="button" class="close" data-dismiss="alert">&times;</button>
			  	<%= alert %>
			  </div>
			<% end %>
	    <%= f.email_field :email, class: "form-control", placeholder: "Email address", :autofocus => true %>
	    <%= f.password_field :password, class: "form-control", placeholder: "Password" %>
	    <% if devise_mapping.rememberable? -%>
		    <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>
		  <% end -%>
	    <button class="btn btn-lg btn-primary btn-block black" type="submit">Sign in</button>
	    <button class="btn btn-lg btn-primary btn-block red" >
	    	<%= link_to "Forgot your password?", new_password_path(resource_name) %>
	    </button>
	  </div>
  <% end %>
</div>
