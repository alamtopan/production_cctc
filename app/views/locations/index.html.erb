<div class="row">   
  <div class="bs-example">
    <div class="panel-heading">List Locations</div>
    <table class="table table-striped">
      <thead>
        <tr>
          <th width="4%">#</th>
          <th>Location Name</th>
          <th width="15%">Action</th>
        </tr>
      </thead>
      <tbody>
      <% @locations.each do |location| %>
        <tr>
          <td></td>
          <td><%= link_to location.name, location %></td>
          <td>
            <%= link_to "<span class='glyphicon glyphicon-wrench'>".html_safe, edit_location_path(location) %> 
            <%= link_to "<span class='glyphicon glyphicon-trash'>".html_safe, location, method: :delete, data: { confirm: 'Are you sure?' } %>
            <%= link_to "<span class='glyphicon glyphicon-eye-open'>".html_safe, location %>
          </td>
        </tr>
      <% end %>

      </tbody>
    </table>
  </div>
</div>