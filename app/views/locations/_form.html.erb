<%= form_for(@location) do |f| %> 
  <% if @location.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-block alert-danger fade in ">
        <button type="button" class="close" data-dismiss="alert">&times;</button>
        <strong>Warning!</strong> <%= pluralize(@location.errors.count, "error") %>
        <% @location.errors.full_messages.each do |msg| %>
        <diV>
          <%= msg %>
        </div>
        <% end %>
      </div>
    </div>
  <% end %>
  <div class="col-lg-6">
    <div class="input-group">
      <label>Location Name</label>
      <%= f.text_field :name, class: "form-control", placeholder:"Location Name" %>
    </div>
    <button type="button" class="btn btn-default">
      <%= link_to "Close", locations_path %>
    </button>
    <button type="submit" class="btn btn-primary">Save As</button>
  </div>
  <div class="block"></div>
<% end %>